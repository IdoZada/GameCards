<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/main_IMG_backgroung"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    android:background="@drawable/casino_table"
    android:orientation="horizontal"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        >

        <TextView
            android:id="@+id/main_LBL_score_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="60dp"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="60sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/main_IMG_boy"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:src="@drawable/boy" />

        <TextView
            android:id="@+id/main_LBL_nameOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/main_IMG_boy"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:textSize="30sp"
            android:text="Ido"

            />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        >

        <TextView
            android:id="@+id/main_LBL_score_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="60dp"
            android:textStyle="bold"
            android:textSize="60sp"
            android:textColor="@color/black"
            android:text="0"/>

        <ImageView
            android:id="@+id/main_IMG_girl"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:src="@drawable/girl" />
        />

        <TextView
            android:id="@+id/main_LBL_nameTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/main_IMG_girl"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:textSize="30sp"
            android:text="Chen"

            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"

        >

        <ImageView
            android:id="@+id/main_IMG_card_one"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginRight="150dp"
            android:layout_marginBottom="80dp"
            android:visibility="invisible"
            android:contentDescription="card one"
            android:src="@drawable/poker_card_b4" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"


        >

        <ImageView
            android:id="@+id/main_IMG_card_two"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginLeft="150dp"
            android:layout_marginBottom="80dp"
            android:visibility="invisible"
            android:contentDescription="card two"
            android:src="@drawable/poker_card_a14" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        >
<!--        android:layout_alignParentBottom="true"-->





        <ImageView
            android:id="@+id/main_IMG_crown"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/crown">
        </ImageView>
    </LinearLayout>






    <!--    <ImageView
            android:id="@+id/main_IMG_avatar_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/main_IMG_avatar_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:srcCompat="@tools:sample/avatars" />-->


</RelativeLayout>